<!doctype html>
<html lang="en">
  <head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
  

</head>
<body style="background-color: #464646">
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
<%= render 'shared/navbar' %>

<div id=container>
<body>
  <div class="page-section flexbox vertical stretch">
      <div class="section-inner flexbox vertical stretch" style="padding-left:10px;padding-right:20px;">
          <div class="section-title flexbox horizontal center" style="color:white;text-decoration:underline">
            <h1> <%= @station.name%> </h1>
          </div>
          <div class="rec-stations-row header">
              <% if @bikes.present? %>
                  <%= render(partial: "bikes/row", collection: @bikes, as: :bike) %>
              <% else %>
                <div class="empty">
                    No bikes found.
                </div>
              <% end %>
          </div>
      </div>
  </div>
</body>

  <div id=footer>
  <%= render 'shared/footer' %>
  </div>
</div>
