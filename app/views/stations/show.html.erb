<!doctype html>
<html lang="en">
  <!---
  Renders navbar from shared/navbar + 
  contains map display and will interact with API backend in app/javascript/map_api -->
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
  
  <style>
    html, body {
      height: 100%;
      margin: 0;
    }

    footer {
      position: sticky;
      bottom: 0;
      width: 100%;
      position: absolute;
    }
  </style>
</head>
<body style="background-color: white">
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
<%= render 'shared/navbar' %>

<body>
<div class="page-section flexbox vertical stretch">
    <div class="section-inner flexbox vertical stretch" style="padding-left:10px;">
        <div class="section-title flexbox horizontal center">
           <h1> <%= @station.name%> </h1>
        </div>
        <div class="flexbox vertical stretch">
            <% if @bikes.present? %>
                <!--<#%= link_to "View All Stations", stations_path(@station::identifier)%> -->
                <%= render(partial: "bikes/row", collection: @bikes, as: :bike) %>
            <% else %>
            <div class="empty">
                No bikes found.
            </div>
            <% end %>
        </div>
    </div>
</div>
</body>
<br></br>
<footer>
<%= render 'shared/footer' %>
</footer>
</html>

