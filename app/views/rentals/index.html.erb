<!doctype html>
<html lang="en">
  <head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
  <%= stylesheet_link_tag "constantPageStyle"%>

</head>
<body>

<body style="background-color: #464646">
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
  
  <!-- Render the navbar contents at top of every page-->
  <%= render 'shared/navbar' %>
</body>

<div id="container">
<div id="form">
  <div class="title"> 
    <h1>Rental Form</h1>
  </div>
    <!-- CHANGE TO TIME RECORDER -->
  
    <%= form_with(model: @rental, url: new_rental_path, local: true, data: { turbo: false }) do |f| %>

      <div class="field">
        <%= f.label :bike_id, "Bike ID #" %><br/>
        <%= f.text_field :bike_id, :value=> @bike_id %>
      </div>

      <div class="field">
        <%= f.label :station_id, "Station ID #" %><br/>
        <%= f.text_field :current_station_id, :value=> @station_id %>
      </div>
      
      <div class="field">
        <%= f.label :first_name, "first name" %><br/>
        <%= f.text_field :first_name, :value=> @current_user.fname%>
      </div>
  
      <div class="field">
        <%= f.label :last_name %><br/>
        <%= f.text_field :last_name, :value=> @current_user.lname %>
      </div>

      <div class = "start_time">
        <%= f.label :start_time %><br/>
        <%= f.datetime_field :start_time, autofocus: true, autocomplete: "start time" %>
      </div>

      <div class="end_time">
        <%= f.label :end_time %><br/>
        <%= f.datetime_field :start_time, autofocus: true, autocomplete: "end time"  %>
      </div>
      
      <div class="field">
        <%= f.label :current_station_address %><br/>
        <%= f.text_field :current_station_address, :value=> @station_address %>
      </div>

      <div class="field">
        <%= f.label :end_station %><br/>
        <%= f.collection_select :end_station, Station.all, :id, :name, prompt: "Select End Station" %>
      </div>

      <div class="actions">
        <%= f.submit "Start Rental" %>
      </div>
    
    <% end %>


    <div style="padding:40px; display:inline;">
      <a style="color:white;text-decoration:underline;" href="/payments/new">Pay For Ride</a>
      <a style="color:white;text-decoration:underline;" href="/">Back to Home</a>
      <a style="color:white;text-decoration:underline;" href="/bikes">Back to All Bikes</a>
    </div>
</div>

  <div id=footer>
  <%= render 'shared/footer' %>
  </div>
</div>
