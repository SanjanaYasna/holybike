<!doctype html>
<html lang="en">
  <!---
  Renders navbar from shared/navbar + 
  contains map display and will interact with API backend in app/javascript/map_api -->
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
  
  <style>
    html, body {
      height: 100%;
      margin: 0;
    }

    footer {
      position: sticky;
      padding: 5px;
      bottom: 0;
      width: 100%;
      position: absolute; 
    }

  </style>
</head>
<body style="background-color: white">
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
  
  <!-- Render the navbar contents at top of every page-->
  <%= render 'shared/navbar' %>


<div class="page-section flexbox vertical stretch">
  <div class="section-inner flexbox vertical stretch" style="padding-left:10px;">
    <div class="section-title">
     <h1 style="color:black"> Hi, <%=@user.fname%>! </h1>
    </div>
    <div class="flexbox">
        Email: <%= @user.email %>
    </div>
  </div>
</div>
</body>
<footer>
 <%= render 'shared/footer' %>
</footer>
