<!--Logged in Nav Bar template. (Currently only used for map)-->
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
<nav class="navbar navbar-expand-lg navbar-light navbar-fixed-top" style = "background-color: #85C83E">
    <a class="dropdown-toggle fit-width" data-toggle="dropdown" href="#"> Menu
        <span class="caret"></span></a>
        <ul class="dropdown-menu" style="padding-left:10px;">
          <li><%= link_to "Home", root_path%></li>
          <li><%= link_to "Profile", user_path(@current_user.id)%></li>
          <li><a href="/bikes">Search Bikes</a></li>
          <li><a href="/discounts">Discounts</a></li>

          <li><a href="/About">About</a></li>
        </ul>
    </a>
    <ul class="navbar navbar-expand-lg navbar-light navbar-fixed-top navbar-right">
      <li><a href="#"><span class="glyphicon glyphicon-user px-4 fit-width"></span> Switch Account</a></li>
      <li><a href="#"><span class="glyphicon glyphicon-log-in px-4 fit-width"></span></a>
      <%=link_to 'Log Out', new_session_path, method: :delete%></li>
    </ul>
    <!-- Button Images -->
    <button class="btn btn-outline-primary" type="button" id="Profile" aria-label="Profile Button">
    <%=link_to (image_tag 'profile.svg', style: 'width: 50px; height: 40px;', alt: 'Profile'), user_path(@current_user.id)%>
    </button>

    <button class="btn btn-outline-primary" type="button" id="Search-bikes" aria-label="Search Bikes Button">
    <%=link_to (image_tag 'BikeIcon.svg', style: 'width: 50px; height: 40px;', alt: 'Search bikes' ),bikes_path%>
    </button>

    <button class="btn btn-outline-primary" type="button" id="discounts" aria-label="Discounts Button">
    <%=link_to (image_tag 'Pricetag.svg', style: 'width: 50px; height: 40px;', alt: 'Discounts'), "/discounts"%>
    </button>

  </nav>
