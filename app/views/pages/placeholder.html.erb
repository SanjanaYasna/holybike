  <style>
    html, body {
      height: 100%;
      margin: 0;
    }

    .container {
      /**height: calc(100vh - 56px); */
      display: flex;
      flex-direction: column; 
    }

    .flexbox.vertical-stretch {
      flex: 1; 
      display: flex; 
      flex-direction: column; 
    }

    .top-section, .bottom-section {
      flex: 1; 
      display: flex;
      justify-content: center;
      align-items: center; 
    }

    .top-section {
      background: grey; 
    }

    .box {
      display: flex;
      justify-content: space-between; /
      width: 80%; 
    }

    .info {
      background: white;
      flex: 1; 
      padding: 20px; 
      text-align: center; 
    }

    .info img {
      display: block; 
      margin: 0 auto; 
    }

    footer {
      position: sticky;
      bottom: 0;
      width: 100%;
    }
    #map { 
      height: 180px;
    }
  </style>
</head>

<body style="background-color: #464646">
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
