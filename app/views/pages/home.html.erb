<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
  </head>
<body style="background-color: #464646">
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
  
  <!--  Nav bar -->
  <%#= render 'pages/navbar' %>

  <div class="container">
    <div class="flexbox vertical-stretch">
      <!-- Top Section. This will only have one section. -->
      <div class="top-section">
        <div>
            <%= link_to "Login",users_login_path%>
            <%= link_to "Signup", users_signup_path%>
            <!-- <#%= link_to "Map", pages_index_path%>-->
          </div>
      </div>

      <!-- Bottom Section. This will be split horizontally into 3 sections (info class)-->
      <div class="bottom-section" style = "border: solid 2px black">
        <div class="box">
          <div class="info" style="border: solid 2px red;">
            <%= image_tag 'analytics.png', style: 'width: 50px; height: 40px;', alt: 'Analytics' %>
            Pretend this has information
          </div>
          <div class="info" style="border: solid 2px blue;">
            <%= image_tag 'analytics.png', style: 'width: 50px; height: 40px;', alt: 'Analytics' %>
            Pretend this has information
          </div>
          <div class="info" style="border: solid 2px green;">
            <%= image_tag 'analytics.png', style: 'width: 50px; height: 40px;', alt: 'Analytics' %>
            Pretend this has information
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
