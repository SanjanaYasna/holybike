<!doctype html>
<html lang="en">
  <!---
  Renders navbar from shared/navbar + 
  contains map display and will interact with API backend in app/javascript/map_api -->
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
  <%= stylesheet_link_tag "constantPageStyle"%>
</head>
<body>

<body style="background-color: #464646">
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
  
  <!-- Render the navbar contents at top of every page-->
  <%= render 'shared/ulnavbar' %>

  <div id="form">
    <div class="title">
      <h1>Sign Up</h1>
    </div>
    <div class="description">
      <h3> Welcome to Valley Bike! <br> To sign up for an account, please complete the following information:</h3>
    </div>
      <%= form_with(model: @user, url: registrations_path, local: true, data: { turbo: false }) do |f| %>

        <div class="field">
          <%= f.label "First Name" %><br/>
          <%= f.text_field :fname %>
          <%= @user.errors[:fname].join(", ") if @user.errors[:fname].any? %>
        </div>

        <div class="field">
          <%= f.label "Last Name" %><br/>
          <%= f.text_field :lname %>
          <%= @user.errors[:lname].join(", ") if @user.errors[:lname].any? %>
        </div>

        <div class="field">
          <%= f.label :phone %><br/>
          <%= f.text_field :phone %>
          <%= @user.errors[:phone].join(", ") if @user.errors[:phone].any? %>
        </div>

        <div class="field">
          <%= f.label :email %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          <% if @user.errors[:email].any? %>
            <p>Email <%= @user.errors[:email].join(", ") %></p>
          <% end %>
        </div>

        <div class="field">
          <%= f.label "Password" %><br/>
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @user.errors[:password].any? %>
            <p>Password <%= @user.errors[:password].join(", ") %></p>
          <% end %>
        </div>

        <div class="actions" style="margin-top: 10px";>
          <%= f.submit "Submit" %>
        </div>
      <% end %>
  </div>

</body>