<!doctype html>
<html lang="en">
  <!---
  Renders navbar from shared/navbar + 
  contains map display and will interact with API backend in app/javascript/map_api -->
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
  
  <style>
    html, body {
      height: 100%;
      margin: 0;
      justify-content: center;
      align-items: center;
    }

    footer {
      position: sticky;
      padding: 5px;
      bottom: 0;
      width: 100%;
      position: absolute;
    }

    form{
        text-align: center;
    }
    h1{
    text-align: center
    }

    h3 {
      text-align: center;
    }

    form{
        text-align: center;
    }
</style>
</head>
<body>

<body style="background-color: white">
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
  
  <!-- Render the navbar contents at top of every page-->
  <%= render 'shared/ulnavbar' %>

<div style="padding:20px; margin-top:150px; background-color:grey; height:500px; color:white;">
    <h1>Sign Up</h1>
    <h3> Welcome to Valley Bike! To sign up for an account, please complete the following information:</h3>

    <%= form_with(model: @user, url: registrations_path, local: true, data: { turbo: false }) do |f| %>

      <div class="field">
        <%= f.label "First Name" %><br/>
        <%= f.text_field :fname %>
        <%= @user.errors[:fname].join(", ") if @user.errors[:fname].any? %>
      </div>

      <div class="field">
        <%= f.label "Last Name" %><br/>
        <%= f.text_field :lname %>
        <%= @user.errors[:lname].join(", ") if @user.errors[:lname].any? %>
      </div>

      <div class="field">
        <%= f.label :phone %><br/>
        <%= f.text_field :phone %>
        <%= @user.errors[:phone].join(", ") if @user.errors[:phone].any? %>
      </div>

      <div class="field">
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        <% if @user.errors[:email].any? %>
          <p>Email <%= @user.errors[:email].join(", ") %></p>
        <% end %>
      </div>

      <div class="field">
        <%= f.label "Password" %><br/>
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @user.errors[:password].any? %>
          <p>Password <%= @user.errors[:password].join(", ") %></p>
        <% end %>
      </div>

      <div class="actions">
        <%= f.submit "Submit" %>
      </div>
    <% end %>
</div>
